<%= form_for [@course,@lecture,test], url:single_solved_path(@course,@lecture,test),remote:true do |f| %>

  <% test.answers.each do |answer| %>
<% if (@scores.empty? or @scores[0].status =="open") and @course.is?(current_user, "student")  %>  
      <input type="radio" id="<%=answer.id%>" name="answer" value="<%=answer.id%>" ><%=answer.answer%></input><br>
    <%else%>
      <% if answer.valid%>  
         <input type="radio" id="<%=answer.id%>" name="answer" disabled="true" checked = "true" value="<%=answer.id%>">        
         <%=answer.answer%></input><br>
      <%else%>
         <input type="radio" id="<%=answer.id%>" name="answer" disabled="true" value="<%=answer.id%>" ><%=answer.answer%></input><br>
      <%end%>
    <% end%>
  <% end%>
<%if !@scores.empty? and @scores[0].status=="close"%>
    <h3>Your score is <%=@scores[0].score%> </h3>
  <%end%>
  <% if @course.is?(current_user, "student") and  @scores.empty? %>
    <div class="actions center">
     <%= f.submit "Submit", :class => 'btn btn-primary' %>
     </div>
  <% end%>
  <br>
<% end%>