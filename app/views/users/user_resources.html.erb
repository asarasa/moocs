<% if @resources.empty? %>
	<h3 style="text-align:center">No has creado ning√∫n recurso.</h3>
<% else %>
	<div class="page-header">
		<h2>Listing my resources</h2>
	</div>

	<table class="table table-stripped">
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Type</th>
	      <th>Url</th>
	      <th></th>
	      <th></th>
	      <th></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @resources.each do |resource| %>
	      <tr>
	        <td><%= resource.name %></td>
	        <td>
		      	<% if resource.type == "video" %>
		      		<img src="/assets/1387049800_social_4.png" alt="video">
		      	<% elsif resource.type == "audio" %>
		      		<img src="/assets/1387133987_media-optical-audio.png" alt="video">
		      	<% elsif resource.type == "pdf" %>
		      		<img src="/assets/1387134021_application-pdf.png" alt="video">
		      	<% elsif resource.type == "text" %>
		      		<img src="/assets/1387134064_readme.png" alt="video">
		      	<% end %>
	        </td>
	        <td><%= resource.url %></td>
	        <td><%= link_to 'Show', resource %></td>
	        <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
	        <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
<% end %>
<center>
	<%= link_to 'New resource', new_resource_path, :class => 'btn btn-success' %>
</center>