<p id="notice"><%= notice %></p>

<div class="page-header">
  <h2><%= @lesson.name %> <small><%=raw @lesson.description %></small></h2>
</div>

<div class="row">
	<div class="col-md-3">
		<table class="table table-stripped">
		  <thead>
		    <tr>
				<th></th>
		    	<th>Name</th>
		    	<th></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @resources.each do |resource| %>
		      <tr>
		      	<td>
		      	<% if resource.type == "video" %>
		      		<%= image_tag("1387049800_social_4.png", :alt => "video") %>
		      	<% elsif resource.type == "audio" %>
		      		<%= image_tag("1387133987_media-optical-audio.png", :alt => "audio") %>
		      	<% elsif resource.type == "pdf" %>
		      		<%= image_tag("1387134021_application-pdf.png", :alt => "PDF") %>
		      	<% elsif resource.type == "text" %>
		      		<%= image_tag("1387134064_readme.png", :alt => "Text") %>
		      	<% end %>
		      	</td>
		        <td><%= resource.name %></td>
		        <td><%=link_to( image_tag("1387049779_forward.png"), view_resource_path(@course, @lesson, resource)) %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>		
	</div>

	<div class="col-md-9">
		<% if @resource.nil? %>
			<h3 style="text-align:center">Please, select a recourse in the left menu.</h3>
		<% else %>
			<% if @resource.type == "video" %>
				<%= render 'resources/video' %>			
  			<% elsif @resource.type == "audio" %>
				<%= render 'resources/audio' %>
			<% elsif @resource.type == "pdf" %>				
				<%= render 'resources/pdf' %>
			<% elsif @resource.type == "text" %>
				<%= render 'resources/text' %>			
  			<% end %>
        	<%= link_to 'Quizzes', resource_quizzes_path(@resource), :class => 'btn btn-primary btn-block' %>
		<% end %>
	</div>
</div>


<div style="margin:50px">
<%= link_to 'Back', course_lessons_path(@course), :class => 'btn btn-default' %>
</div>