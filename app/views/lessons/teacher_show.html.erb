<p id="notice"><%= notice %></p>

<div class="page-header">
  <h2><%= @lesson.name %> <small><%= @lesson.description %></small> <%= link_to 'Student view', course_lesson_path(@course, @lesson, :student => "true"), :class => 'btn btn-info' %></h2>
</div>

<div class="row">
	<div class="col-md-3">
		<table class="table table-stripped">
		  <thead>
		    <tr>
				<th></th>
		    	<th>Name</th>
		    	<th></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% current_user.resources.each do |resource| %>
		      <tr>
		      	<td>
		      	<% if resource.type == "video" %>
		      		<img src="/assets/1387049801_social_4.png" alt="video">
		      	<% end %>
		      	</td>
		        <td><%= resource.name %></td>
		        <td><%=link_to( image_tag("1387049779_forward.png"), use_resource_path(@course, @lesson, resource)) %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>	
		<center>
			<%= link_to 'New resource', new_resource_path, :class => 'btn btn-success' %>
		</center>					
	</div>	

	<div class="col-md-9">
		<table class="table table-stripped">
		  <thead>
		    <tr>
		      <th>Name</th>
		      <th>Content</th>
		      <th>Type</th>
		      <th>Url</th>
		      <th></th>
		      <th></th>
		      <th></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @resources.each do |resource| %>
		      <tr>
		        <td><%= resource.name %></td>
		        <td><%= resource.content %></td>
		        <td><%= resource.type %></td>
		        <td><%= resource.url %></td>
		        <td><%= link_to 'Show', resource %></td>
		        <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
		        <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>		
	</div>
</div>

<%= link_to 'Back', course_lessons_path(@course), :class => 'btn btn-default' %>
