<!DOCTYPE html>
<html>
<head>
  <title>Moocs</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>

  <%= csrf_meta_tags %>
</head>
<body>
    <div class="navbar navbar-inverse moocs-nav" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <%= link_to( image_tag("ucm-ws.png", :height => '50px', :width => "50px"), root_url, :class => 'navbar-brand') %>
        </div>
        <div class="collapse navbar-collapse">
          	<ul class="nav navbar-nav">
            	<li><%= link_to t(:home), root_url %></li>
            	<li><%= link_to t(:users), lastest_users_path %></li>
            	<li><%= link_to t(:courses), lastest_courses_path %></li>
          	</ul>
          	<ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=t :language %> <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to t(:spanish), index_path("es") %></li>
                  <li><%= link_to t(:english), index_path("en") %></li>
                </ul>
              </li>            
        			<% if current_user %>
                <% if current_user.admin %>
                  <li><%= link_to "Admin", admin_path %></li>
                <% end %>
                <li><%= link_to current_user.email, show_profile_path %></li>
                <li><%= link_to t(:my_courses), user_courses_path %></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=t :resources %> <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                      <li><%= link_to t(:my_resources), user_resources_path %></li>
                      <li><%= link_to t(:my_tests), user_tests_path %></li>
                    </ul>
                </li>                         
                <li><%= link_to t(:logout), logout_path %></li>
        			<% else %>
        				<li><%= link_to t(:signup), signup_path %></li>
                <li><%= link_to t(:login), login_path %></li>
        			<% end %>          	
           </ul>
        </div>
      </div>
    </div>

	<div class="container">	   
		<% flash.each do |name, msg| %>
		<div class="alert alert-default">
			<%= content_tag :div, msg, id: "flash_#{name}" %>
		</div>
		<% end %>
	</div>
	<!-- Main component for a primary marketing message or call to action -->

	<div class="container">
		<%= yield %>
	</div>


<script src="//tinymce.cachefly.net/4.0/tinymce.min.js"></script>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
</body>
</html>
