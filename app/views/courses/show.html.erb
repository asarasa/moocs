<div class="row row-offcanvas row-offcanvas-right">

	<!-- Content -->
	<div class="col-xs-12 col-sm-9">
		<div class="card">
    	<h1 class="card-heading lg"><%= @course.name %></h1>
      <div class="card-body">
 				<p><%=raw @course.desc %></p>				 

			</div>
		</div>
	  <div class="buttons">
			<%= link_to 'Back to home', root_url, :class => 'btn btn-default left' %>
		</div>		
	</div>
	<!-- End Content -->


	<!-- Sidebar -->
  <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="info">
  	<div class="card">
  		<div class="card-actions center">
	    	<% if !@course.is_member?(current_user) %>
					<%= link_to 'Join', join_course_path(@course.id), :class => 'btn btn-success' %>
				<% else %>
					<% if @course.is?(current_user, 'teacher') %>
						<%= link_to 'Edit', edit_course_path(@course), :class => 'btn btn-info' %>    			
					<% end %>
					
					<%= link_to 'Lectures', course_lectures_path(@course.id), :class => 'btn btn-warning' %>
					<br> <br>
        	
        	<%= link_to 'Forum', course_topics_path(@course), :class => 'btn btn-success' %>
        	<%= link_to 'Tracking', course_tracking_path(@course), :class => 'btn btn-danger' %>
			<% end %>
  		</div>
  	</div>    	
  	<div class="card">
	 	  <h3 class="card-heading md">Info</h3>
			<div class="card-body">	
	    	<h4>STARTS</h4>
				<p><%= @course.start_date.to_formatted_s(:short) %></p>
				<h4>ENDS</h4>
				<p><%= @course.end_date.to_formatted_s(:short)    %></p>
				<h4>ESTIMATED EFFORT</h4>
				<p><%= @course.estimated_effort %></p>
				<h4>TAGS</h4>
				<p><%=raw @course.tags.join(" ; ") if @course.tags %></p>
	      <h4>PREREQUISITES</h4>
				<p><%=raw @course.prerequisites %></p>
			</div>
  	</div>
  	<div class="card" style="margin-top:50px">
	 	  <h3 class="card-heading md">Teacher/s</h3>
			<div class="card-body">
				<% @course.members_by("teacher").each do |teacher| %>	
		    		<h4>Name</h4>
					<p><%= teacher.name %></p>
					<h4>e-mail</h4>
					<p><%= teacher.email %></p>
				<% end %>	
			</div>
  	</div>    	
  </div>
  <!-- End Sidebar -->
</div>

