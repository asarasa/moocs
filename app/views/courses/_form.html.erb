<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group" data-no-turbolink>
    <%= f.label :desc, "Description" %><br>
    <%= f.cktext_area :desc %>
  </div>
  <div class="form-group">
    <%= f.label :abstract, "Abstract" %><br>
    <%= f.text_field :abstract, :class => 'form-control' %>
  </div>  
  <div class="form-group">
    <%= f.label :start_date, "Start date" %><br>
    <div class='input-group date' id='datetimepicker_start'>    
      <%= f.datetime_field :start_date, :value => @course.start_date.strftime('%d/%m/%Y %H:%M'), :class => 'form-control' %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
    </div>
  </div>  
  <div class="form-group">
    <%= f.label :end_date, "End date" %><br>
    <div class='input-group date' id='datetimepicker_end'>    
      <%= f.datetime_field :end_date, :value => @course.end_date.strftime('%d/%m/%Y %H:%M'), :class => 'form-control' %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
    </div>
  </div>     
  <div class="form-group">
    <%= f.label :estimated_effort %><br>
    <%= f.text_field :estimated_effort, :class => 'form-control' %>
  </div> 
  <div class="form-group">       
     <%= f.check_box :forumpermision %>
     <%= f.label :forumpermision, "students will be able to create topics" %><br>
  </div> 
  <div class="form-group">
    <%= f.label :category %><br>
    <%= f.select :category, t("course.categories").invert, :class => 'form-control' %>
  </div> 
  <div class="form-group">
    <%= f.label :prerequisites, "Prerrequisites" %><br>
    <%= f.text_area :prerequisites, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :banner %><br>
    <%= f.file_field :banner, :class => 'form-control' %>
  </div>     
  <div class="actions">
    <%= f.submit :class => 'btn btn-lg btn-primary btn-block ' %>
  </div>
<% end %>
