<% if @courses.empty? %>
	<div class="card">
		<h2 class="card-heading title"><%=t :no_courses %></h2>
	</div>
<% else %>
	<div class="row">
		<div class="col-md-4">
			<div class="card">
				<h2 class="card-heading title"><%=t :categories %></h2>
			</div>
			
			<ul class="list-group">
				<% Course::CATEGORIES.each do |category| %>
					<li class="list-group-item">
						<div class="row">
							<div class="col-md-10">
								<%= t("course.categories.#{category}") %>
							</div>
							<div class="col-md-2">
								<%= link_to "", category_path(category), remote: true, :class => "glyphicon glyphicon-chevron-right right"%>
							</div>
						</div>
					</li>
				<% end %>
			</ul>
		</div>
		<div class="col-md-8">
			<div class="card">
				<h2 id="category_title" class="card-heading title"><%=t :popular_courses %></h2>
			</div>

			<div id="courses">
				<%= render partial:'welcome/courses', object: @courses %>
		    </div>
		</div>
	</div>	
<% end %>