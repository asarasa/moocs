<% if @courses.empty? %>
	<div class="card">
		<h2 class="card-heading title"><%=t :no_courses %></h2>
	</div>
<% else %>
	<div class="row">
		<div class="col-md-6">
			<div class="card">
				<h2 class="card-heading title"><%=t :new_courses %></h2>
			</div>

			<% @courses.each do |course| %>
				<%= render partial: "courses/course", locals: { course: course } %>
			<% end %>
		</div>
		<div class="col-md-6">
			<div class="card">
				<h2 class="card-heading title"><%=t :popular_courses %></h2>
			</div>

			<% @courses.each do |course| %>
				<%= render partial: "courses/course", locals: { course: course } %>
			<% end %>
		</div>
	</div>	
<% end %>