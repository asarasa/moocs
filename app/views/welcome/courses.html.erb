<% if @courses.empty? %>
	<h3 style="text-align:center">No hay cursos disponibles en este momento, vuelve en otro momento.</h3>
<% else %>
	<div class="row">
		<div class="col-md-6">
			<h2>New courses</h2>

			<% @courses.each do |course| %>
				<h3><%= course.name %></h3>
				<p><%= course.desc %></p>	
				<%= link_to "Show course", course_path(course.id), :class => "btn btn-primary" %>
			<% end %>
		</div>
	</div>
<% end %>