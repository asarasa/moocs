<% @courses.each_with_index do |course, index| %>

  <% if (index + 1) % 2 == 1 || index == 0 %>
    <div class="row">
  <% end %>

    <div class="col-md-6">
      <%= render partial: "courses/course", locals: { course: course } %>
    </div>

  <% if index % 2 == 1 %>   
    </div>
  <% end %>

<% end %>