<div class="card intro">
	<div class="center">
		<h1 class="header-intro"><%=t :welcome %></h1>
	</div>
	<div class="form">
		<%= form_tag(search_path, method: "get") do %>
			<div class="form-group jumbo">
				<%= text_field_tag(:q, nil, :class => 'form-control', :placeholder => t(:search_placeholder)) %>
			</div>
			<div class="center">
				<%= submit_tag t(:search), :class => 'btn btn-success btn-lg' %>
			</div>
		<% end %>
	</div>
</div>

<!-- Three columns of text below the carousel -->
<% @courses.each_with_index do |course, index| %>
	<% if (index + 1) % 3 == 1 || index == 0 %>
		<div class="row">
	<% end %>
		<div class="col-lg-4">
			<%= render partial: "courses/course", locals: { course: course } %>
		</div>
	<% if (index - 1) % 3 == 1 %>		
		</div><!-- /.row -->
	<% end %>
<% end %>